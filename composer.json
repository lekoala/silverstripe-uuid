{
    "name": "lekoala/silverstripe-uuid",
    "description": "Uuid data extension for SilverStripe",
    "type": "silverstripe-vendormodule",
    "keywords": [
        "silverstripe",
        "uuid",
        "module"
    ],
    "license": "MIT",
    "authors": [{
        "name": "LeKoala",
        "email": "thomas@lekoala.be"
    }],
    "require": {
        "php": ">=7.2",
        "silverstripe/framework": "^4",
        "silverstripe/versioned": "^1",
        "tuupola/base62": "^2.1",
        "ramsey/uuid": "^3.9,<4"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "extra": {
        "installer-name": "uuid"
    },
    "scripts": {
        "lint": "phpcs src/ tests/",
        "lint-clean": "phpcbf src/ tests/",
        "test": "phpunit -v"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/recipe-plugin": true,
            "silverstripe/vendor-plugin": true
        }
    },
    "minimum-stability": "dev",
    "support": {
        "issues": "https://github.com/lekoala/silverstripe-uuid/issues"
    }
}
